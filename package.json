{
  "name": "base-core",
  "version": "1.0.0",
  "description": "Base Core - A customized ungoogled-chromium browser for macOS",
  "main": "index.js",
  "scripts": {
    "build": "./script/build.sh",
    "build:arm64": "./script/build.sh arm64",
    "build:x86_64": "./script/build.sh x86_64",
    "build:no-download": "./script/build.sh -d",
    "sign": "./script/sign_and_package_app.sh",
    "retrieve": "./script/retrieve_and_unpack_resource.sh",
    "clean": "rm -rf build/src/out",
    "clean:all": "rm -rf build/src build/download_cache",
    "test": "echo 'Run tests from build/src after building'",
    "lint": "echo 'Add linting as needed for your custom code'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-base-al/base-core"
  },
  "keywords": [
    "chromium",
    "browser",
    "ungoogled-chromium",
    "privacy",
    "macos"
  ],
  "author": "Base Team",
  "license": "MPL-2.0",
  "config": {
    "chromiumVersion": "Latest via ungoogled-chromium"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
